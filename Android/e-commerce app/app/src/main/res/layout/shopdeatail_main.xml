<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/searchbar"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="#6A7D8F"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/btn_shop_return"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_return" />

        <RelativeLayout
            android:id="@+id/researchbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/img_searchbar"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_magnifier"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:paddingLeft="6dp"
                android:src="@drawable/ic_magnifier" />

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ic_magnifier"
                android:background="@null"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:singleLine="true" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:layout_marginTop="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shopdetail_intro"
            android:text="首页"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="#FFFF0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shopdetail_commodity"
            android:text="商品"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="#000000"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shop_detail_fragment"/>
</LinearLayout>