<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/titel_comment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFFD9833">

        <TextView
            android:id="@+id/text_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品评论"
            android:textColor="#FFFFFF"
            android:textSize="23sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/btn_return"/>

        <TextView
            android:id="@+id/text_comment_detail_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="65dp"
            android:text="完成"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/container_comment_detail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/titel_comment"></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_comment_detail">
        <EditText
            android:id="@+id/edit_comment_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入评价"/>
        <TextView
            android:id="@+id/text_comment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_comment_detail"
            android:text="添加图片"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/text_comment_detail"
            android:layout_below="@id/edit_comment_detail"
            android:layout_margin="5dp"
            android:src="@drawable/tap_plus"/>
    </RelativeLayout>

</RelativeLayout>