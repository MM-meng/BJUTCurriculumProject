<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">
    <RelativeLayout
        android:id="@+id/seaching_item_left"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="5dp">
        <ImageView
            android:id="@+id/item_img_left"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/item_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时尚男装 2018夏季新款 休闲"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_below="@id/item_img_left"/>
        <TextView
            android:id="@+id/item_price_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100.00"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:layout_below="@id/item_name_left"/>
        <TextView
            android:id="@+id/item_comment_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000条好评"
            android:textSize="10dp"
            android:textColor="#888888"
            android:layout_below="@id/item_price_left"/>
        <TextView
            android:id="@+id/item_goodrate_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%好评"
            android:textSize="10dp"
            android:textColor="#888888"
            android:layout_below="@id/item_price_left"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/seaching_item_right"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/seaching_item_left"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/item_img_right"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_manshirt"/>
        <TextView
            android:id="@+id/item_name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时尚男装 2018夏季新款 休闲"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_below="@id/item_img_right"/>
        <TextView
            android:id="@+id/item_price_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100.00"
            android:textSize="15dp"
            android:textColor="#FF0000"
            android:layout_below="@id/item_name_right"/>
        <TextView
            android:id="@+id/item_comment_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000条好评"
            android:textSize="10dp"
            android:textColor="#888888"
            android:layout_below="@id/item_price_right"/>
        <TextView
            android:id="@+id/item_goodrate_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%好评"
            android:textSize="10dp"
            android:textColor="#888888"
            android:layout_below="@id/item_price_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>